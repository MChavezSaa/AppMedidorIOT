<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/BlanchedAlmond">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:background="@drawable/cambiob"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige tu opción"
            android:textSize="30dp"
            android:paddingTop="25dp"
            android:textStyle="bold|italic"
            android:fontFamily="serif"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperatura"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:paddingTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humedad"
                android:textSize="20dp"
                android:paddingTop="25dp"
                android:fontFamily="serif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radiación UV     "
                android:textSize="20dp"
                android:paddingTop="25dp"
                android:fontFamily="serif"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btntemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T°"/>

            <Button
                android:id="@+id/btnhum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H"/>
            <Button
                android:id="@+id/btnuv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UV"/>

            <!-- <ImageButton
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 tools:src="@drawable/ic_termometro"
                 android:layout_marginBottom="10dp"/>



             <ImageButton
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 tools:src="@drawable/ic_advertencia_de_rayos_uva"
                 android:layout_marginBottom="10dp"/>


             <ImageButton
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 tools:src="@drawable/ic_humedad"
                 android:layout_marginBottom="10dp"/>-->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FUENTE : UBB IoT"
            android:textStyle="italic"
            android:paddingTop="50dp"
            android:fontFamily="serif"
            />

    </LinearLayout>

</LinearLayout>